<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.7.0" client="site" method="upgrade">
	<name>Jshopping - Расширенный фильтр товаров</name>
	<author>Dmitry Stashenko</author>
	<creationDate>Февраль 2012</creationDate>
	<copyright>Copyright (C) 2006-2012 DECORA studio OOO. Все права защищены.</copyright>
	<license>GNU General Public License</license>
	<authorEmail>support@nevigen.com</authorEmail>
	<authorUrl>nevigen.com</authorUrl>
    <version>3.5.0</version>
	<description>Модуль для расширенной фильтрации товаров JoomShopping.</description>
	<files>
		<filename module="mod_jshopping_ultra_filters">mod_jshopping_ultra_filters.php</filename>
		<filename>mod_jshopping_ultra_filters.xml</filename>
		<folder>tmpl</folder>
		<folder>css</folder>
	</files>
    <languages>
        <language
            tag="en-GB">en-GB.mod_jshopping_ultra_filters.ini</language>
		<language
            tag="ru-RU">ru-RU.mod_jshopping_ultra_filters.ini</language>
    </languages>       
    <config>
        <fields name="params">
            <fieldset name="basic">  
                <field
                    name="show_manufacturers"
                    type="radio"
                    default="1"
                    label="UF_SHOW_MANUFACTURERS"
                    description="UF_SHOW_MANUFACTURERS_DES">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>
                <field
                    name="show_categorys"
                    type="radio"
                    default="1"
                    label="UF_SHOW_CATEGORYS"
                    description="UF_SHOW CATEGORYS_DES">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>
                <field
                    name="show_vendors"
                    type="radio"
                    default="1"
                    label="UF_SHOW_VENDORS"
                    description="UF_SHOW_VENDORS_DES">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>
                <field
                    name="show_labels"
                    type="radio"
                    default="1"
                    label="UF_SHOW_LABELS"
                    description="UF_SHOW_LABELS_DES">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>
                <field
                    name="show_prices"
                    type="radio"
                    default="1"
                    label="UF_SHOW_PRICES"
                    description="UF_SHOW_PRICES_DES">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>
                <field
                    name="show_photos"
                    type="radio"
                    default="1"
                    label="UF_SHOW_PHOTO"
                    description="UF_SHOW_PHOTO_DES">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>                                            
                <field
                    name="show_delivery_times"
                    type="radio"
                    default="1"
                    label="UF_SHOW_DELIVERYTIME"
                    description="UF_SHOW_DELIVERYTIME_DES">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>                                            
                <field
                    name="show_availabilitys"
                    type="radio"
                    default="1"
                    label="UF_SHOW_AVAILABILITY"
                    description="UF_SHOW_AVAILABILITY_DES">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>                                            
                <field
                    name="show_sales"
                    type="radio"
                    default="1"
                    label="UF_SHOW_SALES"
                    description="UF_SHOW_SALES_DES">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>                                            
                <field
                    name="show_additional_price"
                    type="radio"
                    default="1"
                    label="UF_SHOW_ADD_PRICE"
                    description="UF_SHOW_ADD_PRICE_DES">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>                                            
                <field
                    name="show_reviews"
                    type="radio"
                    default="1"
                    label="UF_SHOW_REVIEWS"
                    description="UF_SHOW_REVIEWS_DES">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>
                <field
                    name="show_characteristics"
                    type="radio"
                    default="1"
                    label="UF_SHOW_CHARACTERISTICS"
                    description="UF_SHOW_CHARACTERISTICS_DES">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>     
                <field
                    name="update_form_submit_only"
                    type="radio"
                    default="1"
                    label="UF_UPDATE_FORM_SUBMIT_ONLY"
                    description="UF_UPDATE_FORM_SUBMIT_ONLY_DES">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>     
            </fieldset> 
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="0"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
        </fields>
    </config>       
</extension>